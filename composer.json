{
    "name": "glowieframework/glowie",
    "description": "Powerful and lightweight PHP framework",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "framework",
        "glowie",
        "mvc"
    ],
    "homepage": "https://glowie.tk",
    "support": {
        "issues": "https://github.com/glowieframework/glowie/issues",
        "source": "https://github.com/glowieframework/glowie"
    },
    "authors": [
        {
            "name": "Gabriel Silva",
            "email": "dev@glowie.tk",
            "homepage": "https://glowie.tk"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "glowieframework/glowie-core": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Glowie\\Commands\\": "app/commands/",
            "Glowie\\Controllers\\": "app/controllers/",
            "Glowie\\Middlewares\\": "app/middlewares/",
            "Glowie\\Migrations\\": "app/migrations/",
            "Glowie\\Models\\": "app/models/",
            "Glowie\\Tests\\": "app/tests/",
            "Glowie\\Helpers\\": "app/views/helpers/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('app/config/Config.php') || copy('app/config/Config.example.php', 'app/config/Config.php');\""
        ],
        "post-create-project-cmd": [
            "@php firefly generate-keys"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
